<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dialog_color</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/permanment_marker</item>
        <item name="android:textAppearanceSmall">@style/MessageTextAppearance</item>
    </style>

    <style name="MessageTextAppearance" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/permanment_marker</item>
    </style>
</resources>
